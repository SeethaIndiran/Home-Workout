<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@color/white"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_share_24"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:background="@drawable/bgnd_round_orange"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share with friends"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_share"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_rate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_star_24"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:background="@drawable/bgnd_round_orange"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate us"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_rate"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_fb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_mode_edit_24"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:background="@drawable/bgnd_round_orange"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            />

        <TextView
            android:id="@+id/tv_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_feedback"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_remove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_remove_circle_24"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:background="@drawable/bgnd_round_orange"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"
            />

        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove ads"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>